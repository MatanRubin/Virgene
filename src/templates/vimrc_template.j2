" . . . . . . . . . . . . VIM BUILT IN SETTINGS . . . . . . . . . . . . . . . .
% for builtin in builtins
{{ builtin }}
% endfor


% block autoinstallations
% endblock autoinstallations


% if has_plugins
" . . . . . . . . . . . . . . INSTALLED PLUGINS  . . . . . . . . . . . . . . . .

"This line must exist before vundle configuration
filetype off                              " required
set rtp+=~/.vim/bundle/Vundle.vim         " required
call vundle#begin()                       " required
Plugin 'VundleVim/Vundle.vim'             " required

" Installed plugins
% for plugin in plugins
Plugin "{{ plugin.vundle_installation }}"
% endfor


call vundle#end()                         " required
filetype plugin indent on                 " required
% endif


% if plugin_configurations is defined
" . . . . . . . . . . . . PLUGIN CONFIGURATIONS . . . . . . . . . . . . . . . .

% for plugin_config in plugin_configurations
{{ plugin_config }}

% endfor
% endif


% if snippets is defined
" . . . . . . . . . . . . . USEFUL SNIPPETS . . . . . . . . . . . . . . . . . .

% for snippet in snippets
{{ snippet }}

% endfor
%endif